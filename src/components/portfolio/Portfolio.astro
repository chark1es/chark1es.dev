---
// import Layout from "@/layouts/Layout.astro";
// import SectionContainer from "@/components/SectionContainer.astro";
// import { getCollection } from "astro:content";
import MainCard from "@/components/portfolio/MainCard.astro";
// import CardImage from "@/components/card/CardImage.astro";
import ExperienceCard from "@/components/portfolio/ExperienceCard.astro";
import SkillsCard from "@/components/portfolio/SkillsCard.astro";
import ProjectsCard from "@/components/portfolio/ProjectsCard.astro";
import EducationCard from "@/components/portfolio/EducationCard.astro";
---

<div class="pt-5"></div>
<!-- About Me -->
<main
    class="flex flex-col justify-center items-center overflow-x-hidden xl:left-7 mx-auto"
>
    <div
        class="lg:space-y-8 max-w-5xl px-2 sm:px-8 sm:space-y-6 space-y-4 w-full"
    >
        <div
            class="flex flex-col gap-6 p-8 rounded-2xl shadow-md bg-white dark:bg-dark_mode_post"
        >
            <MainCard />
        </div>
    </div>

    <div
        class="lg:space-y-8 max-w-5xl px-2 sm:px-8 sm:space-y-6 space-y-4 w-full pt-5"
    >
        <div
            class="flex flex-col gap-6 p-8 rounded-2xl shadow-md bg-white dark:bg-dark_mode_post"
        >
            <SkillsCard />
        </div>
    </div>
    <div
        class="lg:space-y-8 max-w-5xl px-2 sm:px-8 sm:space-y-6 space-y-4 w-full pt-5"
    >
        <div
            class="flex flex-col gap-6 p-8 rounded-2xl shadow-md bg-white dark:bg-dark_mode_post"
        >
            <ProjectsCard />
        </div>
    </div>
    <div
        class="lg:space-y-8 max-w-5xl px-2 sm:px-8 sm:space-y-6 space-y-4 w-full pt-5"
    >
        <div
            class="flex flex-col gap-6 p-8 rounded-2xl shadow-md bg-white dark:bg-dark_mode_post"
        >
            <ExperienceCard />
        </div>
    </div>

    <div
        class="lg:space-y-8 max-w-5xl px-2 sm:px-8 sm:space-y-6 space-y-4 w-full pt-5"
    >
        <div
            class="flex flex-col gap-6 p-8 rounded-2xl shadow-md bg-white dark:bg-dark_mode_post"
        >
            <EducationCard />
        </div>
    </div>
</main>
