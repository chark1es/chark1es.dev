---
import { Image } from "astro:assets";
---

<div class="flex flex-col gap-4">
    <div class="flex flex-col gap-6">
        <span class="text-gray-700 font-bold dark:text-gray-300 text-3xl"
            >Education</span
        >
    </div>
</div>

<div class="flex flex-col gap-3">
    <!-- Leuzinger HS -->
    <div class="flex gap-2 justify-between w-full">
        <div class="flex gap-4">
            <Image
                src="/images/ucsd.png"
                alt={""}
                width="100"
                height="100"
                format={"webp"}
                class="h-30 w-30 opacity-75 rounded-3xl bg-neutral-50 dark:bg-dark_mode_post object-fit h-auto max-w-full"
            />
            <div class="flex flex-col pt-3">
                <div
                    class="text-gray-900 dark:text-dark_mode_text font-extrabold text-xl"
                >
                    University of California San Diego
                </div>
                <div
                    class="text-gray-900 dark:text-dark_mode_text font-semibold leading-snug mb-0.5 text-base"
                >
                    Current Student | Computer Science
                </div>
                <div
                    class="font-medium text-gray-700 text-sm dark:text-dark_mode_text"
                >
                    Aug 2022 - Jun 2026
                </div>
            </div>
            <a
                class="flex items-center bg-gray-100 rounded dark:bg-black-400 dark:text-gray-100 gap-x-1.5 h-7 px-2 mt-3 -ml-2 py-1 text-gray-700 text-sm tracking-wide w-fit transition hover:duration-500 hover:scale-110"
                href="https://ucsd.edu"
                target="_blank"
            >
                <iconify-icon icon="mdi:web" height="15" width="15" style=""
                ></iconify-icon>
            </a>
        </div>
    </div>
    <!-- Divider -->
    <div class="bg-gray-200 dark:bg-black-400 block h-px mt-5 mb-2"></div>
    <!-- Leuzinger HS -->
    <div class="flex gap-2 justify-between w-full pt-3">
        <div class="flex gap-4">
            <Image
                src="/images/leuzinger.png"
                alt={""}
                width="100"
                height="100"
                format={"webp"}
                class="h-30 w-30 opacity-75 rounded-3xl bg-neutral-50 dark:bg-dark_mode_post object-fit h-auto max-w-full"
            />
            <div class="flex flex-col pt-3">
                <div
                    class="text-gray-900 dark:text-dark_mode_text font-extrabold text-xl"
                >
                    Leuzinger High School
                </div>
                <div
                    class="text-gray-900 dark:text-dark_mode_text font-semibold leading-snug mb-0.5 text-base"
                >
                    High School Diploma
                </div>
                <div
                    class="font-medium text-gray-700 text-sm dark:text-dark_mode_text"
                >
                    Aug 2018 - Jun 2022
                </div>
            </div>
            <a
                class="flex items-center bg-gray-100 rounded dark:bg-black-400 dark:text-gray-100 gap-x-1.5 h-7 px-2 mt-3 -ml-2 py-1 text-gray-700 text-sm tracking-wide w-fit transition hover:duration-500 hover:scale-110"
                href="https://leuzinger.org"
                target="_blank"
            >
                <iconify-icon icon="mdi:web" height="15" width="15" style=""
                ></iconify-icon>
            </a>
        </div>
    </div>
</div>
