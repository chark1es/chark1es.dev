---
const { skillName, skillIcon, skillLevel } = Astro.props;
const level = parseInt(skillLevel);

const skillLevelFilled = Array.from({ length: level }, (_, index) => index + 1);
const skillLevelUnfilled = Array.from(
    { length: 5 - level },
    (_, index) => index + 1
);
---

<div class="flex-wrap space-y-2 select-none">
    <div class="flex h-6 w-fit overflow-hidden rounded">
        <div class="flex items-center h-5 justify-between">
            <div class="flex gap-2 h-5">
                <iconify-icon
                    icon={skillIcon}
                    ,
                    height="20"
                    ,
                    width="20"
                    ,
                    style=""></iconify-icon>
            </div>
            <div
                class="flex items-center pl-2.5 pr-2 font-semibold text-gray-700 text-sm dark:text-gray-300"
            >
                {skillName}
            </div>
        </div>
    </div>

    <div class="flex gap-1">
        {
            skillLevelFilled.map(() => {
                return (
                    <div class="first:rounded-l-sm first:rounded-r-none h-2 last:rounded-l-none last:rounded-r-sm w-9 bg-gray-500 dark:bg-gray-100" />
                );
            })
        }
        {
            skillLevelUnfilled.map(() => {
                return (
                    <div class="first:rounded-l-sm first:rounded-r-none h-2 last:rounded-l-none last:rounded-r-sm w-9 bg-gray-100 dark:bg-gray-500" />
                );
            })
        }
    </div>
</div>
